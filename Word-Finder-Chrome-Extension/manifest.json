{
  "manifest_version": 3,
  "name": "WordSmith Synonym Finder",
  "version": "1.0",
  "description": "Find synonyms for words and phrases easily.",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "host_permissions": [
    "https://api.api-ninjas.com/*"
  ]
}
